generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String @id @db.Uuid
  userName  String
  email     String @unique
  passeword String

  books book[]

  @@map("users")
}

model book {
  id              String   @id @db.Uuid
  title           String
  numberOfVolumes Int?     @map("number_of_volumes")
  userId          String   @db.Uuid @map("user_id")
  user            user     @relation(fields: [userId], references: [id])
  storageId       String?  @db.Uuid @map("storage_id")
  storage         storage? @relation(fields: [storageId], references: [id])

  @@map("books")
}

model storage {
  id    String  @id @db.Uuid
  name  String?
  books book[]

  @@map("storages")
}
